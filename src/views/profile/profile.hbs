<div class="container p-4">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card text-center">
        <div class="card-body">
              <h5>Welcome {{user.fullname}}!</h5>
          <div class="row mt-5" style="height: 200px;">
            <div class="col-md-6 my-auto">
              <p class="card-title mb-1">Do you want to add a task?</p>
              <a href="/task/add" class="btn btn-primary">Click here!</a>
            </div>
            <div class="col-md-6">
              <img src="/img/{{#if user.image}}{{user.image}}{{else}}default.png{{/if}}" class="image-profile" alt="img-profile" id="img-file">
              <form action="/upload" method="POST" enctype="multipart/form-data" class="d-none">
                <input type="file" name="image" id="input-photo">
                <button class="btn btn-success" id="btn-img">Upload</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>